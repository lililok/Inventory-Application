extends layout

block content
  h1 #{item.name}

  .item-container

    img(src=item.image, alt="movie poster")

    .text

      p 
        strong Category: 
        a(href=item.category.url) #{item.category.name}
      p 
        strong Description: 
        | #{item.description}
      p 
        strong Price: 
        | #{item.price}$
      p 
        strong Amount: 
        | #{item.amount}
  .delete-update
    p
      a(href=item.url+'/delete') Delete Item
    p
      a(href=item.url+'/update') Update Item